gris_oscuro=#444
azul= #22BCE0

body
	background #666666
	font-family arial
	font-size 16px
	transition font-size 1s

footer
	background #668B8B
	border-radius 0.2em
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	padding 0.7em 0
	text-align center
	width 100%
	
header
	background #668B8B
	border-radius 0.5em
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color black
	padding 0.2em
	position relative
	.logo
		border-right 1px solid azul
		float left
		width 60px
		img
			width 50px

	.titular
		margin 0 80px 0 70px

	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			img
				border-radius 50%
				width 60px

nav
	background azul
	border-left 15px solid white
	position relative
	.menu
		height 40px
		margin 0
		padding 0
		li
			display inline-block
			a
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				&:hover
					background rgba(black,0.1)

.posts
	padding 0.5em
	.post
		background white
		border-radius 0.0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black,0.5)
		color gris_oscuro
		margin-botton 0.5em
		.detalles
			height 160px
			margin left 130px
			.autor
				margin 0.5em 0 2em 0
			.titulo
				color gris_oscuro
				font-size 1.1em
				font-style italic
				margin 0
				padding 0.5 em 0.5em 0 0
		.imagen
			float left
			img
				height 160px
				vertical-align top
				width 80px

